{
  "name": "@pismo/bolt",
  "version": "3.16.0",
  "homepage": "https://bolt.pismolabs.io/",
  "style": "dist/css/bolt-css.css",
  "main": "dist/js/bolt.js",
  "module": "dist/js/bolt.mjs.js",
  "typings": "dist/js/bolt.d.ts",
  "license": "ISC",
  "files": [
    "dist/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "initials": "^3.1.1",
    "tslib": "^2.1.0",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "autoprefixer": "^10.2.4",
    "cash-true": "^0.0.2",
    "commitizen": "^4.2.3",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.8.0",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^3.0.1",
    "docz": "^2.3.2-alpha.0",
    "esbuild": "^0.9.3",
    "eslint": "^7.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "fs-extra": "^9.1.0",
    "gatsby-plugin-react-svg": "^3.0.1",
    "husky": "^4.3.8",
    "inquirer": "^8.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "postcss-color-function": "^4.1.0",
    "postcss-import": "^14.0.0",
    "postcss-url": "^10.1.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup": "^2.40.0",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-esbuild": "^3.0.2",
    "standard-version": "^9.1.1",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "postcss": "postcss src/bolt-css.css -d dist/css",
    "rollup": "rollup -c",
    "del:docs": "del bolt-docs",
    "docz:dev": "docz dev",
    "docz:build": "yarn del:docs && docz build",
    "docz:test": "yarn del:docs && cross-env TEST=true docz dev",
    "docz:test:build": "cross-env TEST=true docz build",
    "css:dev": "yarn postcss -w",
    "js:dev": "yarn rollup -w",
    "dev": "concurrently -c -k \"yarn css:dev\" \"yarn js:dev\"",
    "build": "del dist && cross-env NODE_ENV=production yarn rollup && yarn postcss",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "yarn docz:test:build && concurrently -k -c -s last \"yarn docz serve\" \"yarn cy:run\" || true",
    "format:mdx": "prettier \"**/*.mdx\" --parser mdx --write **/*.mdx",
    "format:css": "prettier \"**/*.css\" --parser css --write **/*.css",
    "format:json": "prettier \"**/*.json\" --parser json --write **/*.json",
    "format:js": "eslint . --fix --ignore-pattern \"/src/\"",
    "format": "yarn format:mdx && yarn format:css && yarn format:json && yarn format:js",
    "release": "node scripts/version.js"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "yarn build && yarn format && git add ."
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
