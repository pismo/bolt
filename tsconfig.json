{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es5", "es6", "esnext", "dom"]
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
